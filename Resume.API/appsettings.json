{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ResumeConnection": "Host=localhost; Port=3306; Database=resume; Username=your_db_user; Password=your_db_password",
    "RecruitmentSharedConnection": "Host=localhost; Port=3306; Database=recruitment_shared; Username=your_db_user; Password=your_db_password",
    "CompanyRecruitmentConnection": "Host=localhost; Port=3306; Database=recruitment_companies; Username=your_db_user; Password=your_db_password"
  },
  "JwtSettings": {
    "Key": "your-super-secret-jwt-key-must-be-at-least-32-characters-long",
    "Issuer": "IdentityService",
    "Audience": "IdentityService"
  },
  "ExternalApis": {
    "CompanyService": {
      "BaseUrl": "http://localhost:5013"
    }
  },
  "Files": {
    "ProfileFolder": "profiles",
    "ResumeDocumentFolder": "resumedocuments",
    "MaxProfileImageSize": 5242880, // 5 MB en bytes
    "MaxResumeDocumentSize": 5242880, // 5 MB en bytes
    "MaxResumeDocuments": 3
  },
  "Sftp": {
    "Host": "localhost",
    "Port": 22,
    "Username": "your_sftp_user",
    "Password": "your_sftp_password",
    "BasePath": "/var/uploads/resume"
  }
}
